@model List<console.Models.tblProduct>
@{
    ViewBag.Title = "Home";

    decimal price = 0;
}

<div class="jumbotron">
</div>
@using (Html.BeginForm("Index", "Home"))
{
    if (Model.Any())
    {
        foreach (var prod in Model)
        {
            price = Convert.ToDecimal(prod.btl_ProductPrice.product_price);
            price = decimal.Round(price, 2);
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="..." alt="...">
                    <div class="caption">
                        <h3>@prod.name</h3>
                        <p>@prod.description</p>
                        <p>R @price</p>
                        <p>
                            @Html.ActionLink("Add to Cart", "AddProdToCart", new { data_modal = "", id = prod.product_id}, new { @class = "btn btn-small btn-primary" })
                            @Html.ActionLink("Add to Wishlist", "AddProdToWish", new { data_modal = "", id = prod.product_id }, new { @class = "btn btn-small btn-default" })
                        </p>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <p>No Items found!</p>
    }
}