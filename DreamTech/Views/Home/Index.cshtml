@model List<console.Models.tblProduct>
@{
    ViewBag.Title = "Home";
}

<div class="jumbotron">
</div>
@using (Html.BeginForm("Index", "Home"))
{
    if (Model.Any())
    {
        foreach (var prod in Model)
        {
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="..." alt="...">
                    <div class="caption">
                        <h3>@prod.name</h3>
                        <p>@prod.description</p>
                        <p>
                            @Html.ActionLink("Add to Cart", "AddProd", new { data_modal = "", id = prod.product_id}, new { @class = "btn btn-small btn-primary" })
                            @*<input type="submit" value="Add to Cart" class="btn btn-primary" role="button">*@
                            <a href="#" class="btn btn-default" role="button">Add to Wishlist</a>
                        </p>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <p>No Items found!</p>
    }
}