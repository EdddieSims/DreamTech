@model List<console.Models.tblProduct>

@{
    ViewBag.Title = "Products";
}

<h2>Products</h2>

@if (Model.Any())
{
    foreach (var prod in Model)
    {

        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img src="..." alt="...">
                <div class="caption">
                    <h3>@prod.name</h3>
                    <p>@prod.description</p>
                    <p>
                        <a href="#" class="btn btn-primary" role="button">Add to Cart</a>
                        <a href="#" class="btn btn-default" role="button">Add to Wishlist</a>
                    </p>
                </div>
            </div>
        </div>
    }
}
else
{
    <text>There were no items found!</text>
}
