@model List<console.Models.tblProduct>

@{
    ViewBag.Title = "FeaturedProduct";
    decimal amount = 0;
}

<h2>Featured Products</h2>

@if (Model.Any())
{
    foreach (var prod in Model)
    {
        amount = Convert.ToDecimal(@prod.btl_ProductPrice.product_price);
        amount = decimal.Round(amount, 2);

        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img src="..." alt="...">
                <div class="caption">
                    <h3>@prod.name</h3>
                    <p>@prod.tblProductCategory.product_category</p>
                    <p>R @amount</p>
                    <p>
                        @Html.ActionLink("Add to Cart", "AddProdToCart", new { data_modal = "", id = prod.product_id }, new { @class = "btn btn-small btn-primary" })
                        @Html.ActionLink("Add to Wishlist", "AddProdToWish", new { data_modal = "", id = prod.product_id }, new { @class = "btn btn-small btn-default" })
                    </p>
                </div>
            </div>
        </div>
    }
}
else
{
    <text>There were no items found!</text>
}
