@model console.Models.tbl_Cart

@{
    ViewBag.Title = "Cart";

    var products = ((List<console.Models.tblProduct>)Session["CartItems"]);

}

<div class="panel panel-primary">
    <!-- Default panel contents -->
    <div class="panel-heading"><h4>My Cart</h4></div>

    <!-- Table -->
    <table class="table">
        <thead>
            <tr>
                <th>Item Description</th>
                <th>Availabilty</th>
                <th>Department</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Sub Total</th>
            </tr>
        </thead>
        <tbody>
            @if (products == null)
            {
                <tr>
                    <td>no products in cart</td>
                </tr>
            }
            else
            {
                foreach (var prod in products)
                {
                    <tr>
                        <td>@prod.name</td>
                        <td>Yes</td>
                        <td>@prod.categoty_id</td>
                        <td>1</td>
                        <td>@prod.price_id</td>
                        <td>R 100</td>
                    </tr>
                }

                <tr>
                    <th>Total</th>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <th>R 100</th>
                </tr>
            }
        </tbody>
    </table>
</div>


<div class="form-group">
    <div class="text-right">
        <input type="submit" value="Check Out" class="btn btn-primary" />
    </div>
</div>