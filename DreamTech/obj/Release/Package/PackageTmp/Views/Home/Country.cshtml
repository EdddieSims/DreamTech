@model List<console.Models.tblCountry>
@{
    ViewBag.Title = "Country";
}

<h2>Country</h2>

<div>
    @if (Model.Any())
    {
        <table>
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var country in Model)
                {
                    <tr>
                        <td>@country.country_id</td>
                        <td>@country.country_name</td>

                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <text>No items found!</text>
    }
</div>